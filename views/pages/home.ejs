<div class="jumbotron">
	<div class="container">
		<h1 class="display-4">Bem-vindo(a)!</h1>
	</div>
</div>

<div class="container my-5">

	<h1>Nossos produtos</h1>
	<div class="row">
		<% produtos.forEach(produto => { %>
		<div class="col col-12 col-md-4 col-lg-3 mt-3">
			<div class="card">
				<% if (produto.image) { %>
				<a href="<%= `/product/${produto.id}` %>">
					<img src="<%= produto.image %>" class="card-img-top">
				</a>
				<% } %>
				<div class="card-body">
					<h5 class="card-title"><%= produto.name %></h5>
					<p class="card-text"><%- produto.description.replace(/\n/g, '<br>') %></p>
					<a href="<%= `/product/${produto.id}` %>" class="btn btn-success">Ver detalhes</a>

					<% if (produto.stock) { %>
					<a href="/buy/<%= produto.id %>" class="btn btn-warning">Comprar</a>
					<button data-product="<%= produto.id %>" class="btn btn-primary addToCart">Carrinho</button>
					<% } %>

				</div>
				<div class="card-footer text-muted">
					<% if (produto.stock) { %>
					<div>R$<%= produto.price.replace('.',',') %> (<%= produto.stock %> em estoque)</div>
					<% } else { %>
					R$<%= produto.price.replace('.',',') %> (Esgotado)
					<% } %>
				</div>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<script>
	$('.addToCart').click(function () {
		$this = $(this)
		const productId = $this.data('product')
		let cart = Cookies.get('cart')
		cart = cart.split(',')
		cart.push(productId)
		Cookies.set('cart', cart.join(','))
		// >> verificar se o item já está no carrinho
		// >> verificar se o carrinho existe
	})
</script>