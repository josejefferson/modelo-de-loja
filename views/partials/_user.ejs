<%
if ('env' in locals) { env = env || 'show' } else { env = 'show' }
%>

<% if (env === 'buy') { %>
<label class="col-12 col-md-6 mt-4 user">
	<input type="radio" class="hidden userSelect" name="user" value="<%= user._id %>" <%=i===0?'checked':''%>>
<% } else { %>
<div class="col-12 col-md-6 mt-4 user">
<% } %>
	<div class="card shadow-sm h-100">
		<div class="card-body d-flex flex-column">
			<h4><i class="fas fa-user"></i>
				<%= user.name %>
			</h4>
			<hr>
			<div><i class="fas fa-map-marker-alt"></i> <b>Endere√ßo:</b>
				<%= user.address %>
			</div>
			<div><i class="fas fa-phone-alt"></i> <b>Telefone:</b> <a href="tel:<%= user.phone %>">
					<%= user.phone || '-----' %>
				</a></div>
			<div><i class="fab fa-whatsapp"></i> <b>WhatsApp:</b> <a href="https://api.whatsapp.com/send?phone=<%= user.whatsapp %>">
					<%= user.whatsapp || '-----' %>
				</a></div>
			<div><i class="fas fa-at"></i> <b>E-mail:</b> <a href="mailto:<%= user.email %>">
					<%= user.email || '-----' %>
				</a></div>

			<% if (env === 'edit') { %>
				<div class="d-inline-flex flex-grow-1 align-items-end mt-3">
					<div class="btn-group">
						<a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-secondary">
							<i class="fas fa-pencil-alt"></i> Editar
						</a>
						<button class="btn btn-sm btn-outline-secondary remove" data-client-id="<%= user._id %>">
							<i class="fas fa-trash-alt"></i> Remover
						</button>
					</div>
				</div>
			<% } %>
		</div>
	</div>
<%- env === 'buy' ? '</label>' : '</div>' %>