<%
const env = locals.env || 'show'
product.priceStr = product.price?.toFixed(2).toString().replace('.', ',')
product.oldpriceStr = product.oldprice?.toFixed(2).toString().replace('.', ',')
const {_1, _2, _3, _4, _5} = product.rating
product.ratingUsers = _1 + _2 + _3 + _4 + _5
product.ratingNum = Math.round((_1 * 1 + _2 * 2 + _3 * 3 + _4 * 4 + _5 * 5) / product.ratingUsers) || 0
const _link = env === 'view' ? 'a' : 'div'
const _buyCol = env !== 'buy' ? 'col-6' : 'col-12 mb-3'
const _stkQtd = (product.stock >= 0) ? `(${product.stock} unid. dispon.)` : '(disponível)'
const _stkMin = product.stock === 0 ? 0 : 1
const _stkMax = product.stock === -1 ? '' : `max="${product.stock}"`
const _unDis = product.stock === 0 ? 'disabled' : ''
const _calcPrc = `'R$ ' + ((products.p${product.id}.qtd*${product.price}||false).toFixed(2).toString().replace('.',',')||'- (qtd. inválida)')`
const _pInit = `products.p${product.id}={};products.p${product.id}.qtd=${_stkMin};products.p${product.id}.price=${product.price}`
%>

<div class="product <%=_buyCol%>">
	<<%=_link%> href="/product/<%= product.id %>" class="card">
		<% if (product.badge) { %>
			<div class="badge prodBadge"><%= product.badge %></div>
		<% } %>

		<% if (product.image) { %>
			<div class="image">
				<img src="<%= product.image %>">
			</div>
		<% } else { %>
			<div class="image dummy">
				<div><i class="fas fa-5x fa-image"></i></div>
			</div>
		<% } %>

		<div class="body">
			<h5>
				<% if (product.hidden) { %><i class="fas fa-eye-slash"></i><% } %>
				<%= product.name %>
			</h5>
			<div class="text">
				<div>
					<i class="fa<%=product.ratingNum>=1?'s':'r'%> fa-xs fa-star w-auto text-warning"></i>
					<i class="fa<%=product.ratingNum>=2?'s':'r'%> fa-xs fa-star w-auto text-warning"></i>
					<i class="fa<%=product.ratingNum>=3?'s':'r'%> fa-xs fa-star w-auto text-warning"></i>
					<i class="fa<%=product.ratingNum>=4?'s':'r'%> fa-xs fa-star w-auto text-warning"></i>
					<i class="fa<%=product.ratingNum>=5?'s':'r'%> fa-xs fa-star w-auto text-warning"></i>
					<small><small class="fs-8"><%= product.ratingNum %> (<%= product.ratingUsers %>)</small></small>
				</div>
				<div class="price">
					<% if (product.oldpriceStr) { %>
						<s class="old-price">
							<small>R$ <%= product.oldpriceStr %></small>
						</s>
					<% } %>
					<div class="current-price">R$ <%= product.priceStr %></div>
					<small class="stock">
						<% if (product.stock) { %><%=_stkQtd%>
						<% } else { %>
							<span class="sold-out">(esgotado)</span>
						<% } %>
					</small>
				</div>
			</div>

			<% if (env === 'edit') { %>
				<div class="edit">
					<div>
						<a href="/products/edit/<%= product.id %>">
							<i class="fas fa-pencil-alt"></i>
							<span class="d-none d-sm-inline-block">Editar</span>
						</a>
						<button class="remove" data-product-id="<%= product.id %>">
							<i class="fas fa-trash-alt"></i>
							<span>Remover</span>
						</button>
					</div>
				</div>
			<% } %>
		</div>

		<% if (env === 'buy') { %>
			<div class="quantity">
				Quantidade:
				<div class="controls">
					<button type="button" class="<%=_unDis%>" ng-click="dec('p<%= product.id %>')">
						<i class="fas fa-minus"></i>
					</button>
					<input type="hidden" name="products[<%=i%>][id]" value="<%= product.id %>">
					<input type="number" name="products[<%=i%>][quantity]" <%=_unDis%> class="number"
						ng-model="products.p<%= product.id %>.qtd" ng-init="<%=_pInit%>" min="<%=_stkMin%>"
						<%-_stkMax%> value="<%=_stkMin%>" step="1" required>
					<button type="button" class="<%=_unDis%>" ng-click="inc('p<%= product.id %>', <%= product.stock %>)">
						<i class="fas fa-plus"></i>
					</button>
				</div>
				
				<b class="total-price" ng-bind="<%=_calcPrc%>"></b>
			</div>
		<% } %>
	</<%=_link%>>
</div>