<link rel="stylesheet" href="/css/upload.css">
<label class="dropArea" ng-class="upload.state" ng-on-dragenter="upload.event($event).dragenter($event)"
	ng-on-dragover="upload.event($event).dragover($event)" ng-on-dragleave="upload.event($event).dragleave($event)"
	ng-on-drop="upload.event($event).drop($event)" ng-controller="fileUploadCtrl">
	<input type="file" name="file" ng-on-change="upload.change($event)" class="hidden"
		accept="image/jpg,image/jpeg,image/png,image/webp,image/svg+xml" multiple>
	<h2 class="dropTitle" ng-switch on="upload.state">Arraste os arquivos ou clique aqui</h2>
	<div class="dropText">
		Aceitamos os formatos JPG, PNG, WEBP, SVG<br>
		<small>Limite de 5 MB</small>
	</div>
	<div class="list-group list-group-flush mt-3 w-100" ng-hide="!upload.files.length">
		<div class="row list-group-item d-flex align-items-center text-start" style="background:none" ng-repeat="file in upload.files">
			<small class="col-12 col-md-6 text-truncate">
				<i class="fas fa-file"></i> {{::file.name}}
			</small>
			<small class="col-12 col-md-3 text-truncate">
				<i class="fas fa-file-alt"></i> {{::file.type}}
			</small>
			<small class="col-12 col-md-2 text-truncate">
				<i class="fas fa-file-archive"></i> {{::fileSize(file.size)}}
			</small>
			<small class="col-12 col-md-1 text-end" ng-switch="file.status">
				<div class="fas fa-circle-notch fa-spin text-warning" ng-switch-default></div>
				<div class="fas fa-spinner fa-spin" ng-switch-when="uploading"></div>
				<div class="fas fa-check text-success" ng-switch-when="success"></div>
				<div class="fas fa-times text-danger" ng-switch-when="error"></div>
			</small>
			<small class="col-12 text-danger mt-1" ng-repeat="error in file.errors">
				<i class="fas fa-times"></i> {{::error}}
			</small>
		</div>
	</div>
</label>